<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_box"
    android:padding="@dimen/endgame_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endGameTitle"
        android:textSize="@dimen/large_text_size"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endGameText"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/box_margins" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highScoreText"
        android:textSize="@dimen/small_text_size"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/box_margins" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endgame_replay"
            android:textSize="@dimen/small_text_size"
            android:id="@+id/replayButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endgame_button"
            android:textSize="@dimen/small_text_size"
            android:id="@+id/newGameButton" />
    </LinearLayout>

</LinearLayout>